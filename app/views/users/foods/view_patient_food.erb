<style>
.btn {
    position: relative;
    background-color: #4CAF50;
    border: none;
    color: #FFFFFF;
    text-align: center;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    text-decoration: none;
    overflow: hidden;
    cursor: pointer;
}

.btn:after {
    content: "";
    background: #90EE90;
    display: block;
    position: absolute;
    padding-top: 300%;
    padding-left: 350%;
    margin-left: -20px!important;
    margin-top: -120%;
    opacity: 0;
    transition: all 0.8s
}

.btn:active:after {
    padding: 0;
    margin: 0;
    opacity: 1;
    transition: 0s
}
</style>  


<div class="container" style="margin-top: 10%">
    <% i=0 %>
    <% 10.times do %> 
    <% if filter_n_day(i,@foods_arr).empty? %>
    <div class="container" style="border:2px solid blue;">
      <% if i != 0 %>
        <h4><strong><%=i%> days ago: No Data Entry </strong></h4>
      <% else %>
        <h4><strong>Today: No Data Entry </strong></h4>
      <% end %>    <% else %>
    <div class="container" style="border:2px solid blue;">
    <% end %>      
    <% filter_n_day(i,@foods_arr).each do |food|%>
        <div class="panel-default" style="margin-top:2%">
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-8">
                <h4 class="panel-title">Date: <%= utc_to_local(food.created_at) %></h4>
              </div>
              <div class="col-md-4">
                <a href="/user/<%=@user.id%>/foods/<%= food.id%>/update" aria- label="Left Align" class="btn btn-info"> <i class="fa fa-pencil-square-o">edit</i>
                </a>
              </div>  
            </div>
          </div>
          <div class="panel-body"> 
            <div class="row">
              Name: <%= food.name %>
            </div>
            <div class="row">
              Measure: <%= food.measure %>
            </div>
            <div class="row">
              Description: <%= food.description %>
            </div>
            <div class="row">
              Meal Time: <%= food.meal_time.to_s[0..18] %>
            </div>
          </div>
          <% end %>
       <%  i += 1 %>
      </div>
    <% end %>
  </div>
</div>
  

