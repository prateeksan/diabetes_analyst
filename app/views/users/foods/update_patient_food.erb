 <div class="container" style = "margin-top:15%;width:500px" >
  <% if @food && @food.errors.any? %>
    <div class="alert alert-warning fade in">
      <h4>Oops! The following Errors Occured!</h4>
      <ul>
        <% @food.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @error %>
    <div class="alert alert-warning fade in">
      <h4>Oops! The following Errors Occured!</h4>
      <ul>
        <li><%= @error %></li> 
      </ul>
    </div>
  <% end %>
  <div class="well">
    <div>
      <h4>Update This Entry</h4>
    </div>
    <div class="panel-body">
      <form class="form-horizontal" method="POST" action="/user/<%=@user.id%>/foods/<%=@food.id%>">
        <div class="form-group">
          <label class="col-sm-4 control-label" for="food_name">Food</label>
          <div class="col-sm-8">
            <input id="food_name" name="name" value="<%=@food.name%>" class="form-control" placeholder="foodname">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label">Portions</label>
          <div class="col-sm-8">
            <input id="food_portions" type="text" name="measure" value="<%=@food.measure%>" class="form-control" placeholder="(units) per portion">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label">Time</label>
          <div class="col-sm-8">
            <input type="datetime-local" name="meal_time" class="form-control" value = "<%= date_time_ruby_to_html(@food.meal_time) %>">
          </div>
        </div>    
        <div class="form-group">
          <label class="col-sm-4 control-label">Details</label>
          <div class="col-sm-8">
            <input type="text" name="description" class="form-control" placeholder="any relevant notes">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-default" name="submit_food" id="submit_food" value="submit">Save and Return</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript" src="/javascript/autocomplete.js"></script>
