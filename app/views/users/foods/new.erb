 <div class="container" style = "margin-top:15%;width:500px" >
  <% if @patient_foods && @patient_foods.errors.any? %>
    <div class="alert alert-warning fade in">
      <% @patient_foods.errors.full_messages.each do |message| %>
        <p><%= message %> </p>
      <% end %>
    </div>
  <% end %>
  <form class="form-horizontal" method="POST" action="/user/#{session[:user_id]}/foods">
    <div class="form-group">
      <label class="col-sm-2 control-label">Food</label>
      <div class="col-sm-10">
        <input type="text" name="name" class="form-control" placeholder="foodname">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Portions</label>
      <div class="col-sm-10">
        <input type="text" name="measure" class="form-control" placeholder="(units) per portion">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Time</label>
      <div class="col-sm-10">
        <input type="time" name="meal_time" class="form-control">
      </div>
    </div>    
    <div class="form-group">
      <label class="col-sm-2 control-label">Details</label>
      <div class="col-sm-10">
        <input type="text" name="description" class="form-control" placeholder="any relevant notes">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>
