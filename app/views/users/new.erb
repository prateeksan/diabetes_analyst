<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <p> <%= message %> </p>
  <% end %>
<% end %>
<h1>Sign Up</h1>

<form method="POST" action="/user/signup">
  <div>
    <label>Username: </label>
    <input type="text" name="username" value="<%=@user.username%>">
  </div>
  <div>
    <label>Password: </label>
    <input type="password" name="password">
  </div>
  <div>
    <label>Confirm Password: </label>
    <input type="password" name="password_confirmation">
  </div>
  <div>
    <label>First Name: </label>
    <input type="text" name="first_name" value="<%=@user.first_name%>">
  </div>
  <div>
    <label>Middle Name: </label>
    <input type="text" name="middle_name" value="<%=@user.middle_name%>">
  </div>
  <div>
    <label>Last Name: </label>
    <input type="text" name="last_name" value="<%=@user.last_name%>">
  </div>
  <div>
    <label>Email: </label>
    <input type="email" name="email" value="<%=@user.email%>">
  </div>
  <div>
    <label>Date of Birth: </label>
    <input type="date" name="birth_date" value="<%=@user.birth_date%>">
  </div>
  <div>
    <label>Date of Diagnosis: </label>
    <input type="date" name="diagnosis_date" value="<%=@user.diagnosis_date%>">
  </div>
  <div>
    <label>Height(cm): </label>
    <input type="number" name="height" value="<%= @user.height %>">
  </div>
  <div>
    <label>Medical History: </label>
    <input type="text" name="medical_history" value="<%=@user.medical_history%>">
  </div>
  <div>
    <input type="submit" value="submit">
  </div>
</form>