<style>
.btn {
    position: relative;
    background-color: #4CAF50;
    border: none;
    color: #FFFFFF;
    padding: 20px;
    width: 200px;
    text-align: center;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    text-decoration: none;
    overflow: hidden;
    cursor: pointer;
}

.btn:after {
    content: "";
    background: #90EE90;
    display: block;
    position: absolute;
    padding-top: 300%;
    padding-left: 350%;
    margin-left: -20px!important;
    margin-top: -120%;
    opacity: 0;
    transition: all 0.8s
}

.btn:active:after {
    padding: 0;
    margin: 0;
    opacity: 1;
    transition: 0s
}
</style>
<div class="container">
  <div class="row">
    <div style="text-align:center;width:25%;margin-left:38%;margin-top:10%">
      <h1><p class="text-primary">Daily Report</p></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div class="btn-group-vertical" role="group" aria-label="..." style="margin-top:10%">
        <a href="/user/<%=@user.id%>/edit" aria-label="Left Align" class="btn btn-primary">
            Update Profile
        </a>
        <br/>
        <a href="/user/<%= @user.id %>/foods/new" aria-label="Left Align" class="btn btn-success">
          New Meal
        </a>
        <a href="/user/<%=@user.id%>/meds/new " aria-label="Left Align" class="btn btn-success">
         New Medication
        </a>  
        <a href="/user/<%=@user.id%>/measurements/new" aria-label="Left Align" class="btn btn-success">
          New Measurement
        </a>
        <br/>
        <a href="/user/<%=@user.id%>/foods/view" aria-label="Left Align" class="btn btn-info">
              Edit Recent Meals
        </a>
        <a href="/user/<%=@user.id%>/meds/view" aria-label="Left Align" class="btn btn-info">
              Edit Recent Mecations
        </a>
        <a href="/user/<%=@user.id%>/measurements/view" aria-label="Left Align" class="btn btn-info">
             Edit Recent Measurements
        </a>
        </div>
      </div>
    <div class="col-md-9">
        <div class="row" style="margin-top:3%">
          <div class="col-md-2" style="border:5px double brown;padding:2%">
            <div class="row">
              <h5>Today's total calorie intake:</h5>
            </div>
            <div class="row">
              <h4 class="text-info">
              <% if !@user.patient_foods.empty? && @user.patient_foods.select {|food|food.meal_time.nil?}.empty?%>
              <%= kcal=@user.nutrient_counter("kcal")[time_now_to_midnight.to_sym] %> Kcal
              <% else %>
               <%=kcal=0%>
              <% end %>
              </h4>
            </div>
          </div>
          <div class="col-md-2" style="margin-left:1%;border:5px double brown;padding:2%">
            <div class="row">
              <h5>Today's total protein intake:</h5>
            </div>
            <div class="row">
            <h4 class="text-info">
              <% if !@user.patient_foods.empty? && @user.patient_foods.select {|food|food.meal_time.nil?}.empty?%>
              <%= protein=@user.nutrient_counter("protein")[time_now_to_midnight.to_sym]  %> g
               <% else %>
              <%= protein=0 %>
              <% end %>
              </h4>
            </div>
          </div>
          <div class="col-md-2" style="margin-left:1%;border:5px double brown;padding:2%">
            <div class="row">
              <h5>Today's total fat intake:</h5>
            </div>
            <div class="row">
              <h4 class="text-info">
             <% if !@user.patient_foods.empty? && @user.patient_foods.select {|food|food.meal_time.nil?}.empty?%>
              <%= fat=@user.nutrient_counter("total_fat")[time_now_to_midnight.to_sym]  %> g
             <% else %>
              <%= fat=0 %>
              <% end %>
              </h4>
            </div>
          </div>
          <div class="col-md-3" style="margin-left:1%;border:5px double brown;padding:2%">
            <div class="row">
              <h5><super>*</super>Current BMI(Body Mess Index):</h5>
            </div>
            <div class="row">
              <h4 class="text-info"><%= bmi_calculator(@user) %></h4>
            </div>
          </div>
        </div>
      <div class="row" style="margin-top:5%">
        <div class="col-md-4" style="border:5px double brown;padding:3%">
          <div class="row">
            <h5>Recommended calorie intake around 30 kcal per Kg of Current Weight /day:</h5>
          </div>
          <div class="row">
          <% if @user.patient_measurements.last %>
            <h4 class="text-info"><%= kcal_t=@user.patient_measurements.last.weight * 30 %> Kcal</h4>
          <% else %>
            <% kcal_t = 1 %>
            <h4 class="text-info"> Enter a measurement first </h4>
          <% end %>
          </div>
          <div class="row">
            <div class="progress">
              <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" id="kcalbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="-webkit-transition: none !important;transition: none !important; width: <%=kcal/kcal_t*100%>%">
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4" style="margin-left:1%;border:5px double brown;padding:4%">
          <div class="row">
            <h5>Recommended protein intake /day:</h5>
          </div>
          <div class="row">
          <% if @user.patient_measurements.last %>   
            <h4 class="text-info"><%= protein_t=@user.patient_measurements.last.weight * 0.9%> g</h4>
          <% else %>
            <% protein_t=1 %>
            <h4 class="text-info"> Enter a measurement first </h4>
          <% end %>
          </div>
          <div class="row">
            <div class="progress">
              <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" id="proteinbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="-webkit-transition: none !important;
    transition: none !important;
                width:<%=protein/protein_t*100%>%">
            </div>
          </div>
          </div>
        </div>
        <div class="col-md-3" style="margin-left:1%;border:5px double brown;padding:4%">
          <div class="row">
            <h5>Recommanded limit fat intake /day:</h5>
          </div>
          <div class="row">
          <% if @user.patient_measurements.last %>   
            <h4 class="text-info"><%=  fat_t=@user.patient_measurements.last.weight * 30 * 0.2  %> Kcal</h4>
          <% else %>
          <% fat_t=0 %>
          <h4 class="text-info"> Enter a measurement first </h4>
          <% end %>
          </div>
        </div>
      </div>
      </div>
  </div>
</div>

