<div class="container" style="margin-top: 10%">
    <% i=0 %>
    <% 10.times do %> 
    <% if filter_n_day(i,@measurements_arr).empty? %>
    <div class="container" style="border:2px solid blue;">
      <% if i != 0 %>
        <h4><strong><%=i%> days ago: No Data Entry </strong></h4>
      <% else %>
        <h4><strong>Today: No Data Entry </strong></h4>
      <% end %>
    <% else %>
    <div class="container" style="border:2px solid blue;">
    <% end %>    
      <% filter_n_day(i,@measurements_arr).each do |measurement|%>
        <div class="panel-default" style="margin-top:2%">
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-8">
                <h4 class="panel-title">Date: <%= measurement.created_at %></h4>
              </div>
              <div class="col-md-4">
                <a href="/user/<%=@user.id%>/measurements/<%= measurement.id%>/update" aria- label="Left Align" class="btn btn-default"><i class="fa fa-pencil-square-o">edit</i>
                </a>
              </div>  
            </div>
          </div>
          <div class="panel-body"> 
            <div class="row">
              Blood Sugar Level: <%= measurement.blood_sugar_level %>
            </div>
            <div class="row">
              Systolic Pressure: <%= measurement.systolic_pressure %>
            </div>
            <div class="row">
              Diastolic Pressure: <%= measurement.diastolic_pressure %>
            </div>
            <div class="row">
              Weight: <%= measurement.weight %>
            </div>
            <div class="row">
              Measurement Time: <%= measurement.measurement_time %>
            </div>
          </div>
        </div>
        <% end %>
     <%  i += 1 %>
    </div>
  <% end %>
</div>
  

