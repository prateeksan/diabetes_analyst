<div class="container" style = "margin-top:15%;width:600px" >
  <% if @patient_measurement && @patient_measurement.errors.any? %>
    <div class="alert alert-warning fade in">
      <% @patient_measurement.errors.full_messages.each do |message| %>
        <p><%= message %> </p>
      <% end %>
    </div>
  <% end %>
  <div class="well">
    <div>
      <h4>What were your readings today?</h4>
    </div>
    <div class="panel-body">
      <form class="form-horizontal" method="POST" action="/user/<%=@user.id%>/measurements">
        <div class="form-group">
          <label class="col-sm-4 control-label"><super>*</super>Blood Sugar Level</label>
          <div class="col-sm-8">
            <input type="integer" name="blood_sugar_level" class="form-control" placeholder="Blood Sugar Level(mmol/L)">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label"><super>*</super>Systolic Pressure</label>
          <div class="col-sm-8">
            <input type="integer" name="systolic_pressure" class="form-control" placeholder="Systolic Pressure(mm Hg)">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label"><super>*</super>Diastolic Pressure</label>
          <div class="col-sm-8">
            <input type="integer" name="diastolic_pressure" class="form-control"
            placeholder="Diastolic Pressure(mm Hg)">
          </div>
        </div>    
        <div class="form-group">
          <label class="col-sm-4 control-label"><super>*</super>Weight</label>
          <div class="col-sm-8">
            <input type="number" name="weight" class="form-control" placeholder="Weight(kg)">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label"><super>*</super>Time</label>
          <div class="col-sm-8">
            <input type="time" name="measurement_time" class="form-control" placeholder="Measurement Time">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>