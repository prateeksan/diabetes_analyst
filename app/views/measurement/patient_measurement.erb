<div class="container" style = "margin-top:15%;width:500px" >
  <% if @patient_foods && @patient_foods.errors.any? %>
    <div class="alert alert-warning fade in">
      <% @patient_foods.errors.full_messages.each do |message| %>
        <p><%= message %> </p>
      <% end %>
    </div>
  <% end %>
  <form class="form-horizontal" method="POST" action="/user/<%=@user.id%>/patient_measurements">
    <div class="form-group">
      <label class="col-sm-4 control-label">Blood Sugar Level</label>
      <div class="col-sm-8">
        <input type="integer" name="blood_sugar_level" class="form-control" placeholder="Blood Sugar Level(mmol/L)">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4 control-label">Systolic Pressure</label>
      <div class="col-sm-8">
        <input type="integer" name="systolic_pressure" class="form-control" placeholder="Systolic Pressure(mm Hg)">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4 control-label">Diastolic Pressure</label>
      <div class="col-sm-8">
        <input type="integer" name="diastolic_pressure" class="form-control"
        placeholder="Diastolic Pressure(mm Hg)">
      </div>
    </div>    
    <div class="form-group">
      <label class="col-sm-4 control-label">Weight</label>
      <div class="col-sm-8">
        <input type="number" name="weight" class="form-control" placeholder="Weight(kg)">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-4 control-label">Time</label>
      <div class="col-sm-8">
        <input type="time" name="measurement_time" class="form-control" placeholder="Measurement Time">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>