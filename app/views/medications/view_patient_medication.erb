<div class="container" style="margin-top: 10%">
    <% i=0 %>
    <% 10.times do %>
    <% if filter_n_day(i,@medications_arr).empty? %>
    <div class="container" style="border:2px solid blue;">
      <% if i != 0 %>
        <h4><strong><%=i%> days ago: No Data Entry </strong></h4>
      <% else %>
        <h4><strong>Today: No Data Entry </strong></h4>
      <% end %>
    <% else %>
    <div class="container" style="border:2px solid blue;">
    <% end %>    
    <% filter_n_day(i,@medications_arr).each do |medication|%>
        <div class="panel-default" style="margin-top:2%">
          <div class="panel-heading">
            <div class="row">
              <div class="col-md-8">
                <h4 class="panel-title">Date: <%= medication.created_at %></h4>
              </div>
              <div class="col-md-4">
                <a href="/user/<%=@user.id%>/meds/<%= medication.id%>/update" aria- label="Left Align" class="btn btn-default"> <i class="fa fa-pencil-square-o">edit</i>
                </a>
              </div>  
            </div>
          </div>
          <div class="panel-body"> 
            <div class="row">
              Name: <%= medication.name %>
            </div>
            <div class="row">
              Quantity: <%= medication.quantity %>
            </div>
            <div class="row">
              Taken at: <%= medication.medication_time %>
            </div>
          </div>
        </div>
        <% end %>
     <%  i += 1 %>
    </div>
  <% end %>
</div>
  

